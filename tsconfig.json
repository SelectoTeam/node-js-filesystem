{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "declarationDir": "./dist/typings",
    "outDir": "./dist",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["es6"]
  },
  "include": ["packages", "examples"],
  "exclude": ["node_modules"],
  "typedocOptions": {
    "mode": "modules",
    "out": "apidocs"
  }
}
